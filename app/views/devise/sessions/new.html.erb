<section class=" text-center text-lg-start">
  <div class="container my-5">
    <div class="card mb-3">
      <div class="row g-0 d-flex align-items-center">
        <div class="col-lg-4 d-none d-lg-flex">
          <img src="../1.jpg" alt="Trendy Pants and Shoes"
            class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
        </div>
        <div class="col-lg-8">
          <div class="card-body py-5 px-md-5">
          <h2 class="fw-bold text-center pt-2 mb-5">Ingresa datos de acceso</h2>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <!-- Email input -->
              <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Nombre y Apellido",class: 'form-control' %>
              </div>
              <!-- Password input -->
              <div class="form-outline mb-4">
                <%= f.password_field :password,placeholder: "Clave", autocomplete: "current-password", class: 'form-control'%>
              </div>
              <!-- 2 column grid layout for inline styling -->
              <div class="row mb-4">
                <div class="col-md-6">
                  <!-- Checkbox -->
                  <div class="form-group form-check form-switch mb-4">
                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me, class: 'form-check-input' %>
                        <%= f.label :remember_me, class: "form-check-label" %>
                      </div>
                    <% end %>
                  </div>
                </div>
                <div class="col">
                  <!-- Simple link -->
                  <a href="#!">Forgot password?</a>
                </div>
              </div>
              <!-- Submit button -->
              <div class="actions">
                <%= f.submit "Acceder", class: "btn btn-primary btn-block mb-4" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
