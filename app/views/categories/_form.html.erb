<section class="container">
  <div class="card">
    <div class= "card-body">
      <%= form_with(model: category) do |form| %>
      <% if category.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
          <ul>
            <% category.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class=" col-md-6 form-group">
          <%= form.label :Foto %>
          <%= form.file_field :photo,class: 'form-control' %>
        </div>

        <div class="col-md-6 form-group">
          <%= form.label :Icono %>
          <%= form.text_field :icon,class: 'form-control'%>
        </div>
      </div>

      <div class="row">
        <div class=" col-md-6 form-group">
          <%= form.label :Nombre %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="col-md-6 form-group">
          <%= form.label :description %>
          <%= form.text_field :description, class: 'form-control'  %>
        </div>
      </div>

      <div class="row">
        <div class="col form-check form-switch mt-3 mx-3">
          <%= form.label "Marcar como destacada", class: "form-check-label" %>
          <%= form.check_box :featured, class: "form-check-input", placeholder: "" %>
        </div>
      </div>

      <div class="actions">
        <%= form.submit "Guardar", class:"btn btn-sm btn-success mt-3" %>
      </div>
      <% end %>
    </div>
  </div>
</section>
