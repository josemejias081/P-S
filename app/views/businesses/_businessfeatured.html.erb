<section class="categories-section">
  <div class="row mt-3 mb-0 container-images">
    <% @businesses.each do |business| %>
      <% if business.featured? %>
        <div class="col-md-3 p-0 m-lg-2 my-md-2 mb-sm-2 mb-xs-2 rounded">
          <%= link_to business, class: "" do %>
            <%= image_tag business.logo, class: "rounded logo" %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
