<section class="container">
  <div class="card">
    <div class= "card-body">
      <%= form_with(model: @product) do |form| %>
      <% if @product.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul>
            <% product.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class=" col-md-6 form-group">
          <%= form.label :imagen %>
          <%= form.file_field :image, class: 'form-control' %>
        </div>

        <div class="col-md-6 form-group">
          <%= form.label :Name %>
          <%= form.text_field :name,class: 'form-control'%>
        </div>
      </div>

      <div class="row">
        <div class=" col-md-6 form-group">
          <%= form.label :Presentacion %>
          <%= form.text_field :presentation, class: 'form-control' %>
        </div>

        <div class="col-md-6 form-group">
          <%= form.label :Price %>
          <%= form.text_field :price, class: 'form-control'  %>
        </div>
      </div>

      <div class="row">
        <div class="col form-check form-switch mt-3 mx-3">
          <%= form.label "Marcar como destacado", class: "form-check-label" %>
          <%= form.check_box :featured, class: "form-check-input", placeholder: "" %>
        </div>
      </div>

      <div class="col-md-6 form-group">
        <label>Negocios</label><br>
        <div class="text-dark">
          <%= collection_select(:product, :business_id, @businesses, :id, :name, {:prompt => 'Seleccione un negocio'}, { class: "form-control" })%>
        </div>
      </div>

      <div class="actions">
        <%= form.submit "Guardar", class:"btn btn-sm btn-success mt-3" %>
      </div>
      <% end %>
    </div>
  </div>
</section>