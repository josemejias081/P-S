<div class="row mt-3 mb-3 ">
  <% @products.each do |product| %>
    <% if product.featured? %>
      <div class="col-md-3 mb-2">
        <%= link_to product, class: "card-conten" do %>
          <%= image_tag product.image, class: "rounded size"%>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
